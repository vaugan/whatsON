<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/linearLayout3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
        <ImageView android:id="@+id/reminder_poster" android:layout_height="158dp" android:layout_width="107dp" android:src="@drawable/image1" android:background="@drawable/background"></ImageView>
        <LinearLayout android:id="@+id/linearLayout1" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent">
            <TextView android:textStyle="bold" android:layout_height="wrap_content" android:id="@+id/reminder_text_descr" android:textSize="24dp" android:layout_width="wrap_content" android:textColor="@color/DstvBlue" android:text="30Rock S01E05" android:paddingLeft="10dp"></TextView>
            <RatingBar android:rating="7" android:numStars="10" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/ratingBar1" android:layout_gravity="left" style="@style/eventRatingBar" android:paddingLeft="10dp"></RatingBar>
            <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/reminder_time" android:textColor="@color/White" android:text="02 November 2011" android:textSize="20dp" android:paddingLeft="10dp"></TextView>
            <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/reminder_date" android:textColor="@color/White" android:text="21h30" android:textSize="20dp" android:paddingLeft="10dp"></TextView>
            <LinearLayout android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="bottom">
                <Button android:layout_height="wrap_content" android:clickable="true" android:id="@+id/reminder_positive_btn" android:text="Set reminder" android:layout_width="wrap_content" style="@style/Button"></Button>
                <Button android:layout_height="wrap_content" android:clickable="true" android:id="@+id/reminder_negative_btn" android:text="Cancel" android:layout_width="wrap_content" style="@style/Button"></Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
 
</RelativeLayout>